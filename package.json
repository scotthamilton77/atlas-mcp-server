{
  "name": "atlas-mcp-server",
  "version": "2.8.0",
  "description": "A Model Context Protocol (MCP) server for ATLAS, a Neo4j-powered task management system for LLM Agents - implementing a three-tier architecture (Projects, Tasks, Knowledge) to manage complex workflows.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "atlas-mcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyanheads/atlas-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/cyanheads/atlas-mcp-server/issues"
  },
  "homepage": "https://github.com/cyanheads/atlas-mcp-server#readme",
  "scripts": {
    "build": "tsc && node --loader ts-node/esm scripts/make-executable.ts dist/index.js",
    "db:backup": "ts-node --esm scripts/db-backup.ts",
    "db:import": "ts-node --esm scripts/db-import.ts",
    "dev": "tsc -w",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:up": "docker-compose up -d",
    "docs:generate": "typedoc",
    "fetch-spec": "ts-node --esm scripts/fetch-openapi-spec.ts",
    "inspector": "mcp-inspector --config mcp.json --server atlas-mcp",
    "rebuild": "ts-node --esm scripts/clean.ts && npm run build",
    "start": "node dist/index.js",
    "start:http": "MCP_LOG_LEVEL=debug MCP_TRANSPORT_TYPE=http node dist/index.js",
    "start:stdio": "MCP_LOG_LEVEL=debug MCP_TRANSPORT_TYPE=stdio node dist/index.js",
    "tree": "ts-node --esm scripts/tree.ts"
  },
  "keywords": [
    "AI-integration",
    "agent",
    "atlas",
    "authentication",
    "automation",
    "client",
    "collaboration",
    "dependency-tracking",
    "graph-database",
    "http",
    "jwt",
    "knowledge-management",
    "llm",
    "llm-agent",
    "mcp",
    "MCP",
    "model-context-protocol",
    "neo4j",
    "neo4j-integration",
    "project-management",
    "project-tracking",
    "sdk",
    "server",
    "sse",
    "task-automation",
    "task-management",
    "template",
    "three-tier-architecture",
    "typescript",
    "unified-search"
  ],
  "author": "@cyanheads",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "@types/node": "^22.15.17",
    "@types/node-cron": "^3.0.11",
    "chrono-node": "^2.8.0",
    "commander": "^13.1.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fuzzysort": "^3.1.0",
    "ignore": "^7.0.4",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "neo4j-driver": "^5.28.1",
    "node-cron": "^4.0.3",
    "node-schedule": "^2.1.1",
    "openai": "^4.98.0",
    "partial-json": "^0.1.7",
    "sanitize-html": "^2.16.0",
    "tiktoken": "^1.0.21",
    "validator": "^13.15.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node-schedule": "^2.1.7",
    "@types/sanitize-html": "^2.16.0",
    "@types/validator": "^13.15.0",
    "axios": "^1.9.0",
    "js-yaml": "^4.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3"
  }
}
