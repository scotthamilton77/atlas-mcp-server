{
  "name": "atlas-mcp-server",
  "version": "2.0.2",
  "description": "A Model Context Protocol server built in TypeScript that leverages Neo4jâ€™s graph database, delivers intelligent project and task management while empowering LLM agents with seamless collaboration and guidance.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "atlas-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npx ts-node scripts/make-executable.ts",
    "start": "node dist/index.js",
    "dev": "tsc -w",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "rebuild": "npx ts-node scripts/clean.ts && npm run build",
    "tree": "npx ts-node scripts/generate-tree.ts"
  },
  "keywords": [
    "mcp",
    "neo4j",
    "project-management",
    "typescript",
    "llm",
    "agent",
    "collaboration",
    "task-management",
    "whiteboard",
    "graph-database"
  ],
  "author": "@cyanheads",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fuzzysort": "^3.1.0",
    "neo4j-driver": "^5.28.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "winston": "^3.17.0",
    "zod": "^3.24.2",
    "cross-env": "^7.0.3"
  }
